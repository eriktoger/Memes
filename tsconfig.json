{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "jsx": "react-jsx",

  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  }
}
